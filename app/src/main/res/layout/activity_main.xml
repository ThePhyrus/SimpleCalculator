<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvMathOperation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_math_operation_height"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_math_operation_text_size" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_result_height"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_result_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnClear"
                style="@style/ActionButton"
                android:text="Clear"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/btnOpenBracket"
                style="@style/ActionButton"
                android:text="(" />

            <TextView
                android:id="@+id/btnCloseBracket"
                style="@style/ActionButton"
                android:text=")" />

            <TextView
                android:id="@+id/btnDivision"
                style="@style/ActionButton"
                android:text="/" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnNumber7"
                style="@style/NumberButton"
                android:text="7" />

            <TextView
                android:id="@+id/btnNumber8"
                style="@style/NumberButton"
                android:text="8" />

            <TextView
                android:id="@+id/btnNumber9"
                style="@style/NumberButton"
                android:text="9" />

            <TextView
                android:id="@+id/btnMultiplication"
                style="@style/ActionButton"
                android:text="*" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnNumber4"
                style="@style/NumberButton"
                android:text="4" />

            <TextView
                android:id="@+id/btnNumber5"
                style="@style/NumberButton"
                android:text="5" />

            <TextView
                android:id="@+id/btnNumber6"
                style="@style/NumberButton"
                android:text="6" />

            <TextView
                android:id="@+id/btnAddition"
                style="@style/ActionButton"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnNumber1"
                style="@style/NumberButton"
                android:text="1" />

            <TextView
                android:id="@+id/btnNumber2"
                style="@style/NumberButton"
                android:text="2" />

            <TextView
                android:id="@+id/btnNumber3"
                style="@style/NumberButton"
                android:text="3" />

            <TextView
                android:id="@+id/btnSubtraction"
                style="@style/ActionButton"
                android:text="_" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnPoint"
                style="@style/NumberButton"
                android:text="." />

            <TextView
                android:id="@+id/btnNumber0"
                style="@style/NumberButton"
                android:text="0" />

            <TextView
                android:id="@+id/btnBack"
                style="@style/NumberButton"
                android:text="Back"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/btnResult"
                style="@style/ActionButton"
                android:text="=" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>