<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvMathOperation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_math_operation_height"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_math_operation_text_size" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_result_height"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_result_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/ActionButton"
                android:text="Clear"
                android:textSize="25sp"
                />
            <TextView
                style="@style/ActionButton"
                android:text="("
                />
            <TextView
                style="@style/ActionButton"
                android:text=")"
                />
            <TextView
                style="@style/ActionButton"
                android:text="/"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/NumberButton"
                android:text="7"
                />
            <TextView
                style="@style/NumberButton"
                android:text="8"
                />
            <TextView
                style="@style/NumberButton"
                android:text="9"
                />
            <TextView
                style="@style/ActionButton"
                android:text="*"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/NumberButton"
                android:text="4"
                />
            <TextView
                style="@style/NumberButton"
                android:text="5"
                />
            <TextView
                style="@style/NumberButton"
                android:text="6"
                />
            <TextView
                style="@style/ActionButton"
                android:text="+"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                style="@style/NumberButton"
                android:text="1"
                />
            <TextView
                style="@style/NumberButton"
                android:text="2"
                />
            <TextView
                style="@style/NumberButton"
                android:text="3"
                />
            <TextView
                style="@style/ActionButton"
                android:text="_"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                style="@style/NumberButton"
                android:text="."
                />
            <TextView
                style="@style/NumberButton"
                android:text="0"
                />
            <TextView
                style="@style/NumberButton"
                android:text="Back"
                android:textSize="25sp"
                />
            <TextView
                style="@style/ActionButton"
                android:text="="
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>