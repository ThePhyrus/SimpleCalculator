<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActionButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/mr_action_button_color</item>
        <item name="android:textColor">@color/mr_action_button_text_color</item>
        <item name="android:textSize">@dimen/buttons_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:titleMargin">@dimen/margin_1dp</item>
    </style>

    <style name="NumberButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/mr_number_button_color</item>
        <item name="android:textColor">@color/mr_number_button_text_color</item>
        <item name="android:textSize">@dimen/buttons_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:titleMargin">@dimen/margin_1dp</item>
    </style>

</resources>